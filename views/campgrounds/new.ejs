<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input class="form-control" type="text" id="text" name="campground[title]" placeholder="Enter Campground name" required />
      </div>

      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input class="form-control" type="text" id="locatoion" name="campground[location]" placeholder="Enter Campground location" required />
      </div>

      <div class="input-group mb-3">
        <input type="file" class="form-control" name="image" id="image" multiple />
      </div>

      <div class="mb-3">
        <label class="form-label" for="price">Price</label>
        <div class="input-group">
          <span class="input-group-text">$</span>
          <input type="text" class="form-control" id="price" aria-label="Amount (to the nearest dollar)" placeholder="0" name="campground[price]" required />
          <span class="input-group-text">.00</span>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Campground Description</label>
        <textarea class="form-control" type="text" id="description" name="campground[description]" placeholder="Enter Campground description" required></textarea>
      </div>
      <div class="mb-3"><button class="btn btn-success">Add Campground</button></div>
    </form>
  </div>
</div>
